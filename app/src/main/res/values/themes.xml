<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VaccineSlotsNotifier" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.VaccineSlotsNotifier.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.VaccineSlotsNotifier.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.VaccineSlotsNotifier.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="InputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="materialThemeOverlay">@style/InputEditTextStyle</item>
        <item name="hintTextAppearance">?textAppearanceBody2</item>
        <item name="hintTextColor">@color/edit_hint_text_tint</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">@color/input_layout_box_color</item>
    </style>

    <style name="InputLayoutStyle.ExposedDropdownMenu">
        <item name="materialThemeOverlay">@style/ExposedDropdownMenuTextViewStyle</item>
        <item name="endIconMode">dropdown_menu</item>
    </style>

    <style name="InputLayoutStyle.AutoComplete">
        <item name="materialThemeOverlay">@style/ExposedDropdownMenuTextViewStyle</item>
    </style>
</resources>